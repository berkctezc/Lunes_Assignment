@model Lunes_Assignment3_MVC.Models.Transaction

@{
    ViewData["Title"] = "Create";
}


<h4>Your Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionId" />
            <div class="form-group">
                <label asp-for="TransactionName" class="control-label"></label>
                <input asp-for="TransactionName" class="form-control" />
                <span asp-validation-for="TransactionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionAmount" class="control-label"></label>
                <input asp-for="TransactionAmount" class="form-control" />
                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <input type="submit" value="Save Transaction" class="btn btn-primary btn-block" />
            </div>
            <div class="form-group col-md-4">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fas fa-arrow-left"></i>Go back</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
