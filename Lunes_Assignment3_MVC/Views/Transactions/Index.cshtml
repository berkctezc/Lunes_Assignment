@model IEnumerable<Lunes_Assignment3_MVC.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Transactions</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransactionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionAmount)
            </th>
            <th>
                <p>
                    <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="fas fa-plus"></i> New Transaction</a>
                </p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionName)
            </td>
            <td>
                ₺ @Html.DisplayFor(modelItem => item.TransactionAmount)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.TransactionId"><i class="fas fa-edit fa-lg"></i></a>
                <a asp-action="Delete" asp-route-id="@item.TransactionId" class="text-danger ml-1" onclick="return confim('Are you sure?')"><i class="fas fa-eraser fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
